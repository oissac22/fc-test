{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2022",
    // "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
  },
  "include": [
    "src/**/*"
  ]
}